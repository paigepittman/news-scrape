<div class="jumbotron">
  <center>
    <h1>Bass Scraper</h1><hr />
    <form action="/scrape" method="GET">
      <button>get articles</button></form>
  </center>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-6 articles">
      <ul>
        {{#each favorites}}
            <li>
              {{this.title}}
              {{this.link}}
              <form action="unfavorite/{{this._id}}?_method=PUT" method="POST">
                <input type="hidden" name="favorite" value="false">
                <button type="submit">unfavorite</button>
              </form>
            </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 article-info">

    </div>
  </div>
</div>
