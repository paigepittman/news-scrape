<div class="container">
  <div class="row">
    <div class="col-lg-12 articles">
      <center>
      <ul id="all-faves">
        <li>{{#each favorites}}
              {{this.title}}
              {{this.link}}
              <form action="/unfavorite/{{this._id}}?_method=PUT" method="POST">
                <input type="hidden" name="favorite" value="false">
              </form>
                <form action="/comments/{{this._id}}?" method="GET">
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-star" aria-hidden="true"></span></button>
              </form>

                <input type="hidden" name="favorite" value="false">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#{{_id}}">
                    view comments
                </button>
                <div class="modal fade" id="{{_id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h1 class="modal-title" id="exampleModalLabel" style="margin: auto">all comment</h1>
                      </div>
                      <div class="modal-body">
                        {{this.body}}
                        <div class="modal-footer">
                      </div>
                    </div>
                  </div>
                </div>
              </div>

        {{/each}}
        </li>
      </ul>
      </center>
    </div>
  </div>
</div>
