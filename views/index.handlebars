<div class="jumbotron">
  <center>
    <h1>Bass Scraper</h1><hr />
    <form action="/scrape" method="GET">
      <button type="submit" class="btn btn-primary">get articles</button></form>
      <form action="/favorites" method="GET">
        <button type="submit" class="btn btn-primary">my favorites</button></form>
  </center>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-6 articles">
      <ul>
        {{#each news}}
            <li>
              {{this.title}}
              <form action="readarticle/{{this._id}}?" method="GET">
                <button type="submit" class="btn btn-primary">read article</button>
              </form>
              {{#if this.favorite}}
              <form action="unfavorite/{{this._id}}?_method=PUT" method="POST">
                <input type="hidden" name="favorite" value="false">
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-star" aria-hidden="true"></span></button>
              </form>
              {{else}}
              <form action="favorite/{{this._id}}?_method=PUT" method="POST">
                <input type="hidden" name="favorite" value="true">
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span></button>
              </form>
            {{/if}}
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#{{_id}}">
                  leave comment
              </button>
              <div class="modal fade" id="{{_id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h1 class="modal-title" id="exampleModalLabel" style="margin: auto">leave a comment</h1>
                    </div>
                    <div class="modal-body">
                      <form action="comment/{{this._id}}?_method=PUT" method="POST">
                        <input type="text" name="body">
                        <button type="submit" class="btn btn-primary">leave comment</button>
                      </form>
                      <div class="modal-footer">
                    </div>
                  </div>
                </div>
              </div>
            </div>

            </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 article-info">
      <form action="comment/{{this._id}}?_method=PUT" method="POST">
        <input type="hidden" name="comment"/>
    </div>
  </div>
</div>
